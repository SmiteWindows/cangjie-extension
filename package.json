{
  "name": "zed-cangjie",
  "version": "0.1.0",
  "type": "module",
  "description": "Cangjie language support for Zed editor",
  "scripts": {
    "build": "npm run build-grammar && npm run build-wasm",
    "build-grammar": "node scripts/build-grammar.js",
    "build-wasm": "cd tree-sitter-cangjie && npx tree-sitter build --wasm",
    "generate": "cd tree-sitter-cangjie && npx tree-sitter generate",
    "test": "cd tree-sitter-cangjie && npx tree-sitter test",
    "test-rust": "cd tree-sitter-cangjie && cargo test",
    "clean": "rm -rf tree-sitter-cangjie/src/parser.c tree-sitter-cangjie/src/parser.h tree-sitter-cangjie/src/tree_sitter/*.h"
  },
  "devDependencies": {
    "tree-sitter-cli": "^0.25.0"
  }
}
