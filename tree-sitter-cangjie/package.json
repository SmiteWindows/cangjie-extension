{
  "name": "tree-sitter-cangjie",
  "version": "0.1.0",
  "description": "Cangjie language grammar for tree-sitter",
  "repository": "https://github.com/SmiteWindows/cangjie-extension/tree/main/tree-sitter-cangjie",
  "license": "MIT",
  "author": {
    "name": "SmiteWindows",
    "url": "https://github.com/SmiteWindows/"
  },
  "main": "bindings/node",
  "types": "bindings/node",
  "keywords": [
    "incremental",
    "parsing",
    "tree-sitter",
    "cangjie"
  ],
  "files": [
    "grammar.js",
    "tree-sitter.json",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "dependencies": {
    "node-addon-api": "^8.5.0",
    "node-gyp-build": "^4.8.4"
  },
  "devDependencies": {
    "prebuildify": "^6.0.1",
    "tree-sitter": "^0.25.0",
    "tree-sitter-cli": "^0.25.10"
  },
  "peerDependencies": {
    "tree-sitter": "^0.25.0"
  },
  "peerDependenciesMeta": {
    "tree-sitter": {
      "optional": true
    }
  },
  "scripts": {
    "install": "node-gyp-build",
    "build": "npm run build-grammar",
    "build-grammar": "node scripts/build-grammar.js",
    "build-wasm": "node scripts/build-grammar.js --only-wasm",
    "build-wasm-rust": "cargo build --target wasm32-wasip2 --release",
    "build-wasm-web": "cargo build --target wasm32-unknown-unknown --release",
    "generate": "npx tree-sitter generate",
    "test": "npx tree-sitter test",
    "test-rust": "cargo test",
    "clean": "rm -rf src/parser.c src/parser.h src/tree_sitter tree-sitter-cangjie.wasm pkg/ || true",
    "prestart": "tree-sitter build --wasm",
    "start": "tree-sitter playground",
    "test:node": "node --test bindings/node/*_test.js"
  }
}
